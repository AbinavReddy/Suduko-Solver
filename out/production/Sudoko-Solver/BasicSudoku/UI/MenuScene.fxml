         <image>
            <Image url="@Media/menu%20background.png" />
         </image>
      </ImageView>
      <TextField fx:id="boardSizeField" alignment="CENTER" focusTraversable="false" layoutX="437.0" layoutY="372.0" prefHeight="25.0" prefWidth="150.0" promptText="board size (boxes)" />
